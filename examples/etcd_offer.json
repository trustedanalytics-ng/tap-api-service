                      {
                        "containerPort": 4001,
                        "protocol": "TCP"
                      },
                      {
                        "containerPort": 7001,
                        "protocol": "TCP"
                      }
                    ],
                    "env": [
                      {
                        "name": "MANAGED_BY",
                        "value": "TAP"
                      }
                    ],
                    "resources": {
                      "limits": {
                        "memory": "500M"
